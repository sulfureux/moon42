{
  "name": "moon42-contracts",
  "scripts": {
    "compile": "hardhat compile",
    "lint:fix": "prettier --write {test,scripts,utils,sample}",
    "lint:prettier": "prettier {test,scripts,utils,sample}",
    "abi": "hardhat export-abi",
    "test": "pnpm run compile && hardhat test",
    "test:scroll": "pnpm run compile && hardhat test --network scroll",
    "run:l": "hardhat run --network linea",
    "run:lt": "hardhat run --network lineaTestnet",
    "run:pzk": "hardhat run --network polygonZK",
    "run:pzkt": "hardhat run --network polygonZKTestnet"
  },
  "dependencies": {
    "@openzeppelin/contracts": "4.9.3",
    "@openzeppelin/contracts-upgradeable": "4.9.3"
  },
  "devDependencies": {
    "@ethersproject/abi": "^5.7.0",
    "@ethersproject/providers": "^5.7.2",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.8",
    "@nomicfoundation/hardhat-toolbox": "^2.0.2",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@openzeppelin/hardhat-upgrades": "^1.27.0",
    "@openzeppelin/test-helpers": "^0.5.16",
    "@types/ethereumjs-abi": "^0.6.3",
    "chai": "^4.3.7",
    "dotenv": "16.3.1",
    "ethereumjs-abi": "^0.6.8",
    "ethers": "^5.7.2",
    "hardhat": "2.17.1",
    "hardhat-abi-exporter": "^2.10.1",
    "hardhat-gas-reporter": "^1.0.9",
    "lint-staged": "13.2.3",
    "prettier": "^2.8.8",
    "prettier-plugin-organize-imports": "3.2.3",
    "typescript": "^5.1.6"
  },
  "lint-staged": {
    "{test,scripts,utils,sample}/**/*": "prettier --write"
  }
